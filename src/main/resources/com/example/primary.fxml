   </padding>
   <children>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Nome" />
            <Label layoutX="10.0" layoutY="10.0" text="RM" GridPane.rowIndex="2" />
            <Label layoutX="10.0" layoutY="10.0" text="Turma" GridPane.rowIndex="1" />
            <TextField fx:id="txtRm" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="txtNome" layoutX="286.0" layoutY="38.0" GridPane.columnIndex="1" />
            <TextField fx:id="txtTurma" layoutX="286.0" layoutY="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <Button mnemonicParsing="false" onAction="#adicionarAluno" text="Adicionar" />
