      <HBox alignment="CENTER" prefHeight="75.0" prefWidth="496.0" spacing="50.0">
         <children>
            <RadioButton fx:id="optOrdenarPorNome" mnemonicParsing="false" selected="true" text="Ordenar por nome" />
            <RadioButton fx:id="optOrdenarPorTurma" mnemonicParsing="false" text="Ordernar por turma" />
         </children>
         <padding>
            <Insets right="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
